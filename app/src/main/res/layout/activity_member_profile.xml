<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_back" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_8sdp">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/userImageView"
                                android:layout_width="@dimen/_64sdp"
                                android:layout_height="@dimen/_64sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_user_holder"
                                app:civ_border_color="@color/colorPrimary"
                                app:civ_border_width="@dimen/_1sdp"
                                app:civ_circle_background_color="@color/colorWhite" />

                            <ImageView
                                android:id="@+id/ivLevel"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:layout_marginTop="@dimen/_64sdp"
                                android:layout_gravity="bottom|center"
                                android:scaleType="centerInside"
                                tools:ignore="ContentDescription" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvUsername"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textSize="@dimen/_10ssp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <RatingBar
                                    android:id="@+id/ratingBarClient"
                                    style="@android:style/Widget.Holo.RatingBar.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:isIndicator="true"
                                    android:numStars="5"
                                    android:rating="0"
                                    android:stepSize="1" />

                                <TextView
                                    android:id="@+id/tvRateCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_4sdp"
                                    android:gravity="center"
                                    android:text="(0)"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_9ssp"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvJoinDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="viewStart"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_10ssp"
                                tools:text="join date" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvBlock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:drawableTop="@drawable/ic_blocked"
                            android:gravity="center"
                            android:text="@string/block"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_7ssp"
                            tools:ignore="UseCompatTextViewDrawableXml" />

                        <TextView
                            android:id="@+id/tvFollow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:drawableTop="@drawable/ic_follow"
                            android:gravity="center"
                            android:text="@string/follow"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_7ssp"
                            tools:ignore="UseCompatTextViewDrawableXml" />

                        <TextView
                            android:id="@+id/tvChat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:drawableTop="@drawable/ic_chat_rounded"
                            android:gravity="center"
                            android:text="@string/chat_text"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_7ssp"
                            tools:ignore="UseCompatTextViewDrawableXml" />

                        <TextView
                            android:id="@+id/tvCall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:drawableTop="@drawable/ic_call"
                            android:gravity="center"
                            android:text="@string/call"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_7ssp"
                            tools:ignore="UseCompatTextViewDrawableXml" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@color/semi_gray" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:text="@string/personal_quote"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvQuoteDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:textColor="@color/colorGrayDarker"
                        android:textSize="@dimen/_10ssp"
                        tools:text="@string/personal_quote" />

                </LinearLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <com.flyco.tablayout.SegmentTabLayout
                android:id="@+id/memberProfileTabs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginVertical="@dimen/_4sdp"
                tl:tl_bar_color="@color/white"
                tl:tl_bar_stroke_color="@color/colorPrimary"
                tl:tl_bar_stroke_width="@dimen/_1sdp"
                tl:tl_divider_color="@color/colorPrimary"
                tl:tl_divider_padding="@dimen/_4sdp"
                tl:tl_divider_width="@dimen/_1sdp"
                tl:tl_indicator_anim_enable="true"
                tl:tl_indicator_bounce_enable="true"
                tl:tl_indicator_color="@color/colorPrimary"
                tl:tl_indicator_corner_radius="@dimen/_4sdp"
                tl:tl_textBold="SELECT"
                tl:tl_textSelectColor="@color/white"
                tl:tl_textUnselectColor="@color/black"
                tl:tl_textsize="@dimen/_10ssp" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpMemberProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddRate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_24sdp"
        android:gravity="center"
        android:text="@string/add_rate"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        app:backgroundTint="@color/colorPrimary"
        app:cornerRadius="@dimen/_1sdp"
        app:icon="@drawable/ic_star"
        app:iconGravity="textStart"
        app:iconSize="@dimen/_16sdp"
        app:iconTint="@color/white"
        app:rippleColor="@color/black"
        tools:ignore="ContentDescription" />

</RelativeLayout>